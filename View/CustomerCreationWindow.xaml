<Window x:Class="BankApp_WPF.View.CustomerCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankApp_WPF.View"
        mc:Ignorable="d"
        Title="BankApp" Icon="bank.png" Height="250" Width="400" WindowStartupLocation="CenterOwner">
    <Grid>
        <GroupBox Header="Customer adding window" Margin="10" Padding="10">
            <StackPanel>
                <TextBlock>Write new Customer name:</TextBlock>
                <TextBox x:Name="tbCustomerName" />
                <Button Margin="0 20 0 20" Click="ButtonCreate_Click">Add Customer</Button>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
