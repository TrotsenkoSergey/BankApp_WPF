<Window x:Class="BankApp_WPF.View.CustomAccountGetSetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankApp_WPF.View"
        mc:Ignorable="d"
        Title="BankApp" Icon="bank.png" Height="200" Width="200" WindowStartupLocation="CenterOwner">
    <Grid>
        <GroupBox Header="Account window" Margin="10" Padding="10">
            <StackPanel>
                <TextBlock Text="  Enter the amount,"/>
                <TextBlock Text="only positive values:"/>
                <TextBox x:Name="tbAmount" />
                <Button Margin="0 20 0 20" Click="Button_Click">Done</Button>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
