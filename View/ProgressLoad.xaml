<Window x:Class="BankApp_WPF.View.ProgressLoad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankApp_WPF.View"
        mc:Ignorable="d"
        Title="BankApp" Icon="bank.png" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <GroupBox Header="Load information window" Margin="10" Padding="10">
            <StackPanel>
                <ProgressBar x:Name="progressBar" Margin ="5 5 5 5" Height="20"/>
                <TextBlock x:Name="progressInfo"/>
                <Button Margin="0 20 0 20" Click="Button_Click">Close</Button>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
